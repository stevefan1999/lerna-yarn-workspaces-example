{
  "dependencies": {
    "esm": "^3.0.77",
    "tslib": "^1.9.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-rc.1",
    "@babel/core": "^7.0.0-rc.1",
    "@babel/plugin-proposal-class-properties": "7.0.0-beta.54",
    "@babel/plugin-proposal-decorators": "7.0.0-beta.54",
    "@babel/plugin-proposal-export-namespace-from": "7.0.0-beta.54",
    "@babel/plugin-proposal-function-sent": "7.0.0-beta.54",
    "@babel/plugin-proposal-json-strings": "7.0.0-beta.54",
    "@babel/plugin-proposal-numeric-separator": "7.0.0-beta.54",
    "@babel/plugin-proposal-throw-expressions": "7.0.0-beta.54",
    "@babel/plugin-syntax-dynamic-import": "7.0.0-beta.54",
    "@babel/plugin-syntax-import-meta": "7.0.0-beta.54",
    "@babel/preset-env": "^7.0.0-rc.1",
    "@types/node": "^10.7.1",
    "alsatian": "^2.3.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^8.2.6",
    "eslint": "^5.4.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^4.0.0",
    "eslint-plugin-standard": "^3.1.0",
    "husky": "^1.0.0-rc.13",
    "lerna": "^3.1.1",
    "lerna-changelog": "^0.8.0",
    "lint-staged": "^7.2.2",
    "prettier": "^1.14.2",
    "prettier-eslint": "^8.8.2",
    "prettier-eslint-cli": "^4.7.1",
    "rollup": "^0.64.1",
    "rollup-plugin-auto-external": "^2.0.0",
    "rollup-plugin-babel": "^4.0.0-beta.8",
    "rollup-plugin-commonjs": "^9.1.5",
    "rollup-plugin-eslint": "^5.0.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.2.1",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-terser": "^1.0.1",
    "rollup-plugin-typescript2": "^0.16.1",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.5.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.14.0",
    "tslint-config-standard": "^7.1.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "^3.0.1"
  },
  "engines": {
    "node": ">=8.x.x"
  },
  "husky": {
    "hooks": {
      "post-commit": "git update-index --again",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "ignore": [
      "**/dist/**/*.*"
    ],
    "linters": {
      "*.{js,jsx}": [
        "prettier-eslint packages/**/*.js --write",
        "git add"
      ],
      "*.{ts,tsx}": [
        "tslint --project tsconfig.json packages/**/*.ts --fix",
        "git add"
      ]
    }
  },
  "name": "lerna-yarn-workspaces-example",
  "prettier": {
    "jsxBracketSameLine": false,
    "printWidth": 80,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "none",
    "useTabs": false
  },
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/stevefan1999/lerna-yarn-workspaces-example.git"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "rollup -c --environment NODE_ENV:production",
    "changelog": "lerna-changelog",
    "test": "node -r esm -r ts-node/register/transpile-only -r tsconfig-paths/register ./alsatian.ts",
    "watch": "rollup -c -w"
  },
  "workspaces": [
    "packages/*"
  ]
}
